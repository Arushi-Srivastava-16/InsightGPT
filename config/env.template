# =============================================================================
# InsightGPT Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# Command: copy env.template .env (Windows) or cp env.template .env (Linux/Mac)
# =============================================================================

# -----------------------------------------------------------------------------
# Neo4j Database Configuration (REQUIRED)
# -----------------------------------------------------------------------------
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_neo4j_password_here


# -----------------------------------------------------------------------------
# LLM Provider Selection (REQUIRED)
# -----------------------------------------------------------------------------
LLM_PROVIDER=ollama
LLM_TEMPERATURE=0.0
LLM_MAX_TOKENS=2048


# -----------------------------------------------------------------------------
# OpenAI Configuration (Required if LLM_PROVIDER=openai)
# -----------------------------------------------------------------------------
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_EMBEDDING_MODEL=text-embedding-3-small


# -----------------------------------------------------------------------------
# Ollama Configuration (Required if LLM_PROVIDER=ollama)
# -----------------------------------------------------------------------------
OLLAMA_MODEL=hermes-2-pro-llama-3-8b
OLLAMA_EMBEDDING_MODEL=mxbai-embed-large
OLLAMA_NUM_CTX=2048


# -----------------------------------------------------------------------------
# Embeddings Configuration
# -----------------------------------------------------------------------------
EMBEDDINGS_PROVIDER=ollama


# -----------------------------------------------------------------------------
# Chat Model Configuration
# -----------------------------------------------------------------------------
CHAT_PROVIDER=ollama
CHAT_MODEL=hermes-2-pro-llama-3-8b
CHAT_TEMPERATURE=0.8
CHAT_MAX_TOKENS=2048


# -----------------------------------------------------------------------------
# Zotero Integration (Optional)
# -----------------------------------------------------------------------------
ZOTERO_ENABLED=false
ZOTERO_LIBRARY_ID=your_library_id_here
ZOTERO_LIBRARY_TYPE=user
ZOTERO_API_KEY=your_zotero_api_key_here
ZOTERO_STORAGE_DIR=


# -----------------------------------------------------------------------------
# PDF Processing Configuration
# -----------------------------------------------------------------------------
PDF_EXTRACT_IMAGES=false
PDF_MAX_CHAR=1000
PDF_NEW_AFTER_N_CHARS=800
PDF_COMBINE_TEXT_UNDER_N_CHARS=200


# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
STREAMLIT_SERVER_PORT=8501
DEBUG_MODE=false
LOG_LEVEL=INFO


